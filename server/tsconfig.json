{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",         
    "outDir": "./dist",                       
    "allowJs": true,        
    "resolveJsonModule": true,                          
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
